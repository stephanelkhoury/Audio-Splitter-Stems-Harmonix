# Harmonix Audio Splitter Environment Variables

# Application
ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here

# Server
HOST=0.0.0.0
PORT=8000

# Processing
MAX_FILE_SIZE_MB=500
TEMP_DIR=data/temp
OUTPUT_DIR=data/outputs

# GPU Settings
CUDA_VISIBLE_DEVICES=0
TORCH_DEVICE=cuda  # cuda, cpu, or auto

# Storage (S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=harmonix-stems

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Sentry (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# API Keys (if needed for premium models)
HARMONIX_API_KEY=

# Model paths
DEMUCS_CACHE_DIR=models/weights
INSTRUMENT_DETECTOR_MODEL=models/instrument_classifier.h5
